<!doctype html>
<html lang="en">
    <head>
        <%- include('components/head'); %>
    </head>

    <body>
        <div class="container">
            <div class="wrapper">
                <p>
                    <b>Stand:</b> <br><br>
                    <% for (let i = 0; i < dataPL.length; i++) { %>
                        <p class="club"><%= i + 1 %>. <img class="logo" src="<%= logo[i] %>" alt="logo"/>  <%= dataPL[i] %><br></p>
                    <% } %>
                </p>
            </div>
            <div class="wrapper">
                <p><b>Uitslagen:</b> <br><br></p>
                <% for (let i = 0; i < homeTeam.length; i++) { %>
                    <p class="match">Datum: <%= date[i] %> <br> <%= homeTeam[i] %> <b><%= scoreHome[i] %> - <%= scoreAway[i] %></b> <%= awayTeam[i] %></p>
                <% } %>
            </div>
        </div>
    </body>
</html>